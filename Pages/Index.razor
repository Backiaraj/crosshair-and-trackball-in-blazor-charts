        new ChartDataModel { Date = new DateTime(2014, 01, 01), Sales = 85, Sales1 = 30, Sales2 = 15 },
        new ChartDataModel { Date = new DateTime(2015, 01, 01), Sales = 52, Sales1 = 20, Sales2 = 45 },
        new ChartDataModel { Date = new DateTime(2016, 01, 01), Sales = 64, Sales1 = 50, Sales2 = 60 },
        new ChartDataModel { Date = new DateTime(2017, 01, 01), Sales = 87, Sales1 = 65, Sales2 = 83 },
        new ChartDataModel { Date = new DateTime(2018, 01, 01), Sales = 75, Sales1 = 55, Sales2 = 35 },
        new ChartDataModel { Date = new DateTime(2019, 01, 01), Sales = 89, Sales1 = 65, Sales2 = 75 },
        new ChartDataModel { Date = new DateTime(2020, 01, 01), Sales = 83, Sales1 = 41, Sales2 = 65 },
