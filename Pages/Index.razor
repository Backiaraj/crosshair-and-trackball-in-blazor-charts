@page "/"

<SfChart Title="Sales History of the Product">
    <ChartSeriesCollection>
        <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.DateTime"
                           Title="Years" LabelFormat="yyyy" EdgeLabelPlacement="EdgeLabelPlacement.Shift">
            <ChartAxisCrosshairTooltip Enable="true" Fill="#C1272D">
                <ChartCrosshairTextStyle Size="14px" Color="#FFFFFF"></ChartCrosshairTextStyle>
            </ChartAxisCrosshairTooltip>
        </ChartPrimaryXAxis>
        <ChartPrimaryYAxis Title="Sales">
        </ChartPrimaryYAxis>
        <ChartSeries DataSource="@ChartData" XName="Date" YName="Sales" Name="John"
                     Type="ChartSeriesType.Line">
        </ChartSeries>
        <ChartSeries Type="ChartSeriesType.Line" DataSource="@ChartData" XName="Date" YName="Sales1" 
                     Name="Andrew"></ChartSeries>
        <ChartSeries Type="ChartSeriesType.Line" DataSource="@ChartData" XName="Date" YName="Sales2"
                     Name="Thomas"></ChartSeries>
    </ChartSeriesCollection>
    <ChartCrosshairSettings Enable="true" LineType="LineType.Vertical">

    </ChartCrosshairSettings>
    <ChartTooltipSettings Enable="true" Shared="true"
                          Format="${series.name} : ${point.x} : ${point.y}">

    </ChartTooltipSettings>
</SfChart>

